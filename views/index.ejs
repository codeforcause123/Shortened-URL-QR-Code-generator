<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>QR Code Generator</title>
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <div class="container">
    <nav>
      <p class="lego">QRCode Generator</p>
      <form>
        <span class="wrapper">
          <label for="fullUrl" class="custom-field two">
            <input type="url" name="fullUrl" id="fullUrl" placeholder="&nbsp" />
            <span class="placeholder">Enter URL</span>
          </label>

          <button type="button" id="btn1"
            class="text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-green-500 dark:text-green-500 dark:hover:text-white dark:hover:bg-green-600 dark:focus:ring-green-800"
            onclick="GenerateQR()">
            Generate
          </button>
        </span>
      </form>
    </nav>
    <div id="content1"><span class="lego">Shortened URL</span>

      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                Full URL
              </th>
              <th scope="col" class="px-6 py-3">
                Short URL
              </th>
              <th scope="col" class="px-6 py-3">
                Clicks
              </th>
            </tr>
          </thead>
          <tbody id="shrturls">
            
          </tbody>
          <tbody>
            <% shortUrls.forEach(shortUrl=>{ %>
              <tr
                class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
                  <p>
                    <%= shortUrl.full %>
                  </p>
                </th>
                <td class="px-6 py-4 font-medium text-blue-600 dark:text-blue-500 hover:underline">
                  <a href="<%= shortUrl.short %>">
                    <%= shortUrl.short %>
                  </a>
                </td>
                <td class="px-6 py-4">
                  <%= shortUrl.clicks %>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>
    </div>
    <div id="content2" class="lego">
      <span class="text-white">QR Code</span>
      <div id="qrcode" class="flex justify-center pt-20"></div>
    </div>
  </div>
  <script src="qrcode.min.js"></script>
  <script src="app.js"></script>
</body>

</html>